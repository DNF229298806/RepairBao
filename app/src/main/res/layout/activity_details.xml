<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_weather_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <cn.edu.zwu.repairbao.ImageSlideshow
                    android:id="@+id/is_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/state_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雇主姓名："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/username_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="王麻子"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/phone_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="18371807450"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修地点："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/loc_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="浙江万里学院浙江万里学院浙江万里学院浙江万里学院浙江万里学院"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修类型："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/type_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="家电大师"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户报价："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/user_quote_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100-200"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望维修时间："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/user_time_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2018年4月11日-2018年4月22日"
                    android:textColor="#3c3f41"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题信息描述："
                    android:textColor="#3c3f41"/>

                <TextView
                    android:id="@+id/breakdown_content_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mark_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#80FFFFFF"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repair_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修地点："
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_repair_loc_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="宁波市鄞州区首南街道钱湖南路8号浙江万里学院"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repair_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修类型："
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_repair_type_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="家电维修/手机维修/电脑维修"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户报价："
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_user_quote_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="200-500"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_repair_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期望维修时间："
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_repair_user_time_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018年4月10日-2018年4月11日"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_breakdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障信息："
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_breakdown_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电脑螺旋升天，把我汽车的引擎盖都炸没了可怕可怕我告诉你快来修我的电脑 修我的车，我可是有券的 我只要出一分钱，快点啊 哪个瓜皮工程师快点过来修理"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_rob_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="抢单"/>

        <Button
            android:id="@+id/bt_see_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看详情"/>
    </LinearLayout>
</LinearLayout>